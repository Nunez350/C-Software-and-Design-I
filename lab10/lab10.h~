#include <string>
using namespace std;

const int MAXCOUNTRIES=240; //array sizes in structures MUST be declared constant

struct Country {
  string name;
  double pop1950;
  double pop1970;
  double pop1990;
  double pop2010;
  double pop2015;
  string countryName;
  double growth;

};


struct World {
  int     numCountries;
  Country countries[MAXCOUNTRIES];
};

